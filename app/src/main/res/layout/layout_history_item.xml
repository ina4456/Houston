<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:background="@drawable/bg_history_item">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="11.5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/boarding_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:lineHeight="18sp"
                android:textColor="@color/text_color_title"/>

            <TextView
                android:id="@+id/elapsed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:lineHeight="14sp"
                android:textColor="@color/text_color_dark"/>

            <View
                android:id="@+id/btn_check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dt_list_btn"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <View
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/menu_ic_dot"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="19dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp">

                    <TextView
                        android:id="@+id/departure_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:lineHeight="23sp"
                        android:textColor="@color/text_color_title"/>

                    <TextView
                        android:id="@+id/get_in_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:lineHeight="18sp"
                        android:textColor="@color/text_color_sub"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/destination_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:lineHeight="23sp"
                        android:textColor="@color/text_color_title"/>

                    <TextView
                        android:id="@+id/get_out_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:lineHeight="18sp"
                        android:textColor="@color/text_color_sub"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:gravity="center"
            android:text="@string/menu_text_call_this_path"
            android:textColor="@drawable/btn_call_taxi_by_this_path_text"
            android:textSize="14sp"
            android:lineHeight="14sp"
            android:background="@drawable/btn_call_taxi_by_this_path"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginBottom="11.5dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/driver_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp"
            android:lineHeight="22sp"
            android:textColor="@color/text_color_dark"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="29dp"/>

</LinearLayout>