<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:background="@drawable/img_hanam"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textColor="@color/color_white"
            android:lineHeight="42sp"/>

        <TextView
            android:id="@+id/app_type"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="39dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/app_type"
            android:textSize="16sp"
            android:lineHeight="21sp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_rectangle_ccffffff_r12dp"/>

    </LinearLayout>

    <View
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/sp_logo_hanam"/>


</RelativeLayout>
